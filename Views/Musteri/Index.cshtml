@using MVCStokProject.Models.Entity
@model List<TBLMUSTERILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
            {
                <div>
                    <label>Aranacak müşterinin adı:</label>
                    @Html.TextBox("p")
                    <input type="submit" value="ara"/>
                </div>
            }
<table class="table table-bordered">
    <tr>
        <th>Müşteri id</th>
        <th>Müşteri Ad</th>
        <th>Müşteri Soyad</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>Alert</th>

    </tr>
    <tbody>
        @foreach (var musteri in Model)
        {
            <tr>
                <th>@musteri.musteriid</th>
                <td>@musteri.musteriAd</td>
                <td>@musteri.musteriSoyad</td>
                <td><a href="/Musteri/Sil/@musteri.musteriid" class="btn btn-danger">SİL</a></td>
                <td><a href="/Musteri/MusteriGetir/@musteri.musteriid" class="btn btn-warning">GÜNCELLE</a></td>
                <td>@Html.ActionLink("Sil Butonu", "Sil", new { id = musteri.musteriid }, new { @class = "btn btn-warning", onclick = "return confirm('Gerçekten silmek istiyor musunuz?')" })</td>
            </tr>
        }
    </tbody>
</table>
<a href="/Musteri/YeniMusteri/" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>
